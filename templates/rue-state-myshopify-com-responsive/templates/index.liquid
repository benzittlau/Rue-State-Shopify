{% if settings.blog_widget %}
  <div class="sixteen columns">
  	<div class="section clearfix">
  
      <div class="sixteen columns alpha omega">
        <h4 class="title"><a href="{{ blogs[settings.blog_widget_select].url }}">Recent Articles</a></h4>
      </div>
      {% for article in blogs[settings.blog_widget_select].articles limit:4 %}
        <div class="four columns {% if forloop.first %}alpha{% elsif forloop.last %}omega{% endif %}">
  
          <a href="{{ article.url }}" title="{{ article.title | escape }}">{{ article.title }}</a>
          <div class="meta">
            <span class="label">{{ article.published_at | date: "%B %d, %Y" }}</span>
          </div>
  
          {% if article.excerpt == blank %}
            <p>
              {{ article.content | strip_html | truncatewords: 40 }}
            </p>
          {% else %}
            {{ article.excerpt }}
          {% endif %}
                  
        </div>
      {% endfor %}

      </div>
    </div>
{% endif %}

{% if settings.twitter_widget %}
  <div class="sixteen columns">
  	<div class="section clearfix">
      <h4 class="title"><a href="https://twitter.com/{{ settings.twitter_username }}" class="twitter" title="Follow {{ shop.name }} on Twitter">Recent Tweets</a></h4>
      <div class="tweet"></div>
    </div>
  </div>
{% endif %}